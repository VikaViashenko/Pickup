@model Pickup.Domain.ViewModels.Phone.PhoneViewModel
@{
    ViewBag.Title = "Save";
    Layout = "_Layout";
}

@{
    var textTitle = Model?.id == 0 ? "Редагування даних про товар" : "Додавання товару";
}

<div style="padding: 10px;"></div>
<div class="col-md-12">
    <div class="product-body">
        <div class="product product-outline-secondary" style="background-color: white">
            <div class="product-header">
                <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
            </div>
            <div class="product-body">
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="id" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand"></label>
                        <input asp-for="Brand" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label asp-for="Color"></label>
                        <input asp-for="Color" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label asp-for="BatteryCapacity"></label>
                        <input asp-for="BatteryCapacity" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">₽</span>
                        <input asp-for="Price" type="text" class="form-control">
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="form-group">
                        <select class="form-control" asp-for="Features" id="featuresId"></select>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Avatar" class="form-control" type="file">
                    </div>
                    <button class="btn btn-primary btn-lg float-right" type="submit">Відправити</button>
                </form>
            </div>
        </div>
    </div>
</div>